# Universal SvelteKit Template Environment Variables

# API Configuration
VITE_API_URL=/api
VITE_API_TIMEOUT=30000
VITE_API_RETRY=3

# Application
VITE_APP_NAME="My Awesome Project"
VITE_APP_VERSION="0.1.0"
VITE_APP_ENV=development

# Sentry Configuration
VITE_SENTRY_DSN=https://your-sentry-dsn@o0.ingest.sentry.io/0000000

# Security Tokens (for CI/CD only)
# CODECOV_TOKEN=your-codecov-token
# SNYK_TOKEN=your-snyk-token
VITE_APP_DESCRIPTION="Project created with Universal SvelteKit Template"

# Features
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_SENTRY=false
VITE_ENABLE_PWA=false

# Development
VITE_DEBUG=true
VITE_LOG_LEVEL=info

# Sentry (if enabled)
VITE_SENTRY_DSN=
VITE_SENTRY_ENVIRONMENT=development
VITE_SENTRY_TRACES_RATE=0.1

# Analytics (if enabled)
VITE_GA_ID=
VITE_GTM_ID=

# Security
VITE_CSRF_SECRET=your-csrf-secret-here
VITE_ENCRYPTION_KEY=your-encryption-key-here

# Cache
VITE_CACHE_TTL=300000
VITE_CACHE_MAX_SIZE=100

# API Endpoints (customize for your backend)
VITE_AUTH_API=/api/auth
VITE_USER_API=/api/users
VITE_CONTENT_API=/api/content
