# Dockerfile для веб-интерфейса EAP
FROM node:18-alpine AS web-builder

WORKDIR /app

# Установка зависимостей для веб-интерфейса
RUN npm install -g pnpm

COPY web/package*.json web/pnpm-lock.yaml ./
RUN pnpm install --frozen-lockfile

COPY web/ ./
RUN pnpm run build

# Продакшн образ для веб-интерфейса
FROM nginx:alpine AS web

# Копирование собранного веб-приложения
COPY --from=web-builder /app/dist /usr/share/nginx/html

# Создание конфигурации Nginx
COPY <<EOF /etc/nginx/conf.d/default.conf
server {
    listen 3000;
    server_name localhost;
    root /usr/share/nginx/html;
    index index.html;

    # Gzip compression
    gzip on;
    gzip_vary on;
    gzip_types text/plain text/css application/json application/javascript text/xml application/xml application/xml+rss text/javascript;

    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;

    # API для доступа к отчетам
    location /api/reports {
        alias /app/reports;
        autoindex on;
        autoindex_format json;
        add_header Access-Control-Allow-Origin *;
    }

    # Обслуживание статических файлов
    location / {
        try_files \$uri \$uri/ /index.html;
        expires 1h;
        add_header Cache-Control "public, immutable";
    }

    # Обслуживание отчетов
    location /reports/ {
        alias /app/reports/;
        autoindex on;
        autoindex_format html;
    }
}
EOF

# Монтирование директории с отчетами
VOLUME ["/app/reports"]

EXPOSE 3000

CMD ["nginx", "-g", "daemon off;"]
