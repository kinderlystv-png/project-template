{
  "name": "shinomontagka-universal-template",
  "version": "2.0.0",
  "type": "module",
  "description": "Enterprise-grade SvelteKit template with advanced infrastructure, monitoring, and optimization systems for production applications",
  "keywords": [
    "sveltekit",
    "typescript",
    "template",
    "starter",
    "boilerplate",
    "infrastructure",
    "production-ready"
  ],
  "license": "MIT",
  "author": {
    "name": "SHINOMONTAGKA Team",
    "url": "https://github.com/kinderlystv-png"
  },
  "maintainers": [
    {
      "name": "kinderlystv-png",
      "url": "https://github.com/kinderlystv-png"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/kinderlystv-png/project-template.git"
  },
  "homepage": "https://github.com/kinderlystv-png/project-template#readme",
  "bugs": {
    "url": "https://github.com/kinderlystv-png/project-template/issues"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "vite --host",
    "dev:debug": "vite --debug --host",
    "dev:https": "vite --https --host",
    "build": "vite build",
    "build:prod": "NODE_ENV=production vite build",
    "build:analyze": "vite build --mode analyze",
    "build:stats": "vite build && npx vite-bundle-analyzer dist",
    "preview": "vite preview",
    "preview:https": "vite preview --https",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "type-check": "svelte-check --tsconfig ./tsconfig.json && tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:report": "eslint . --format html --output-file reports/eslint-report.html",
    "lint:staged": "lint-staged",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "coverage": "vitest run --coverage",
    "test:unit": "vitest run tests/unit --reporter=verbose",
    "test:integration": "vitest run tests/integration",
    "test:performance": "vitest run tests/performance",
    "test:performance:config": "vitest run --config=vitest.performance.config.ts",
    "test:performance:smoke": "vitest run tests/config/vitest-performance-config.test.ts",
    "test:validate-performance": "npm run test:performance:smoke && echo \"âœ… Performance config validation passed\"",
    "validate:performance": "node scripts/validate-performance-config.mjs",
    "analyze": "cd eap-analyzer-dashboard && node live-generator.cjs",
    "analyze:sync": "cd eap-analyzer-dashboard && node config-sync.cjs && node live-generator.cjs",
    "analyze:check": "cd eap-analyzer-dashboard && node config-sync.cjs --dry-run",
    "analyze:dashboard": "cd eap-analyzer-dashboard && python -m http.server 8080",
    "test:visual": "vitest run tests/visual",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report tests/reports/e2e-html",
    "test:all": "pwsh ./scripts/run-all-tests.ps1",
    "test:quick": "pwsh ./scripts/test-runner.ps1",
    "test:parallel": "vitest run --reporter=verbose --pool=threads",
    "test:help": "pwsh ./scripts/test-runner.ps1 --help",
    "ci": "npm run lint && npm run type-check && npm run test:coverage && npm run build",
    "ci:fast": "npm run lint && npm run test && npm run build",
    "clean": "rimraf dist .svelte-kit coverage test-results node_modules/.vite",
    "clean:cache": "rimraf node_modules/.vite node_modules/.vitest",
    "deps:update": "npm update && npm audit",
    "deps:check": "npm outdated",
    "audit": "pnpm audit --audit-level=high",
    "audit:fix": "pnpm audit --fix",
    "security": "npm audit && npm run deps:check",
    "docker:dev": "docker-compose -f docker-compose.yml up --build",
    "docker:test": "docker-compose -f docker-compose.test.yml up --build",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d --build",
    "docker:down": "docker-compose down --remove-orphans",
    "docker:logs": "docker-compose logs -f",
    "docker:clean": "docker-compose down --rmi all --volumes --remove-orphans && docker system prune -f",
    "docker:shell": "docker-compose exec app sh",
    "docker:run": "pwsh ./docker/run.ps1",
    "template:update": "node scripts/update-template.js",
    "template:test": "npm install && npm run test && npm run build",
    "setup": "node scripts/setup-project.cjs",
    "template:setup": "node scripts/template-setup.js",
    "template:publish": "node scripts/template-publisher.js",
    "validate": "npm run lint && npm run type-check && npm run test:coverage"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.4.2",
    "@sentry/sveltekit": "^10.10.0",
    "framer-motion": "^10.16.4",
    "glob": "^11.0.3",
    "gsap": "^3.12.2",
    "lottie-web": "^5.12.2",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.6",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@eslint/js": "^9.35.0",
    "@playwright/test": "^1.55.0",
    "@sveltejs/adapter-auto": "^6.1.0",
    "@sveltejs/kit": "^2.37.0",
    "@sveltejs/vite-plugin-svelte": "^6.2.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/svelte": "^4.2.3",
    "@tsconfig/svelte": "^5.0.5",
    "@types/node": "^20.19.13",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "cssnano": "^7.1.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-svelte": "^2.46.1",
    "globals": "^16.3.0",
    "husky": "^8.0.3",
    "jsdom": "^22.1.0",
    "lint-staged": "^15.5.2",
    "postcss-import": "^16.1.1",
    "prettier": "^3.1.0",
    "prettier-plugin-svelte": "^3.1.2",
    "rimraf": "^6.0.1",
    "svelte": "^5.38.7",
    "svelte-check": "^3.6.2",
    "terser": "^5.44.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.3.2",
    "typescript-eslint": "^8.42.0",
    "vite": "^7.1.4",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{js,ts,svelte}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
